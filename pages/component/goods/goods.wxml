<!-- 状态栏 -->
<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}">
  <view slot="content">我的小程序</view>
</cu-custom>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-blue cur':''}}" wx:for="{{tabList}}" wx:key bindtap="tabSelect" data-id="{{index}}">
      {{item}}
    </view>
  </view>
</scroll-view>


<view class="flex" style='margin:30rpx 0rpx 30rpx 30rpx'>
  <view class="bg-white flex-sub margin-right radius shadow-lg" bindtap='nav_detail'>
