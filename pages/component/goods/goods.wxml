<!-- 状态栏 -->
<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}">
  <view slot="content">薯一小程序</view>
</cu-custom>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index ==TabCur?'text-blue cur':''}}" wx:for="{{tabList}}" wx:key bindtap="tabSelect" data-typeObj="{{item}}">
      {{item.type}}
    </view>
  </view>
</scroll-view>

<import src="../../../template/list.wxml" />
<block wx:for="{{goodsList}}" wx:key="{{index}}">
  <template is="goodsList" data="{{item:item,isUserPublish:false,isUserTrade:false}}">
  </template>
</block>