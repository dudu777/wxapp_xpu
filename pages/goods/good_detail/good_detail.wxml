<!--pages/publish/publish.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="true">
  <view slot="backText">返回</view>
  <view slot="content">商品详情</view>
</cu-custom>
<view class="cu-form-group ">
  <view class="padding-xs flex align-center">
    {{goodInfo.publishTime}}
  </view>
</view>
<view class="cu-form-group" style='display:block'>
  <view class=" padding-xs flex align-center text-xxl ">
    <view class="text-price text-red">{{goodInfo.cellPrice}}</view>
  </view>
  <view class=" text-xl padding-xs">
    {{goodInfo.title}}
  </view>
  <view class="  text-lg padding-xs">{{goodInfo.description}}</view>
  <block wx:for="{{goodInfo.img}}" wx:key>
    <view class="image  padding-xs">
      <image src="{{item}}" mode="widthFix"></image>
    </view>
  </block>

  <view class="padding-xs text-sm flex align-center padding-bottom-lg">
    商品具体细节和交易请于卖家联系。
  </view>
</view>
<view class="cu-form-group margin-top">
  <view class="title">卖家联系方式</view>
  <view class="margin-tb-sm text-center" bindtap='getContact'>
    <button class="cu-btn round bg-blue 'shadow'">查看</button>
  </view>
</view>
