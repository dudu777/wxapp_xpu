<!--pages/publish/publish.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="true">
  <view slot="backText">返回</view>
  <view slot="content">商品发布</view>
</cu-custom>

<form bindsubmit="formSubmit">

  <view class="cu-form-group margin-top">
    <view class="title">标题</view>
    <input placeholder="商品名称品牌（最多30字）" name="title" maxlength="5"></input>
  </view>
  <view class="cu-form-group align-start">
    <view class="title">商品描述</view>
    <textarea maxlength="-1" name="description" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="描述宝贝的用途，转手原因等"></textarea>
  </view>
  <view class="cu-form-group">
    <view class="title">类别</view>
    <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
      <view class="picker">
        {{index?picker[index]:'请选择商品类别'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">是否为全新</view>
    <switch name="isNew"></switch>
  </view>
  <view class="cu-bar bg-white margin-top">
    <view class="action text-black">
      图片上传
    </view>
    <view class="action">
      {{imgList.length}}/4
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
  <view class="cu-form-group  margin-top">
    <view class="title">出手价</view>
    <input placeholder="商品出售价格" class='text-red' name="cellPrice" type='number' maxlength="5"></input>
    <text class="text-red">元</text>
  </view>
  <view class="cu-form-group">
    <view class="title">买入价</view>
    <input placeholder="选填" class='text-red' name="buyPrice" type='number' maxlength="5"></input>
    <text class=" text-red">元</text>
  </view>
  <view class="cu-form-group ">
    <view class="title">是否接受讲价</view>
    <switch name="isBargain"></switch>
  </view>
  <view class="cu-form-group align-start margin-top">
    <view class="title">交易地址</view>
    <textarea maxlength="-1" name="address" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="选填（如：中心广场大屏幕下）"></textarea>
  </view>
  <view class="cu-form-group">
    <view class="title">联系方式</view>
    <input placeholder="(如: 手机:1xxxxxxxxxx)"  name="contact" ></input>
  </view>
  <view class="cu-form-group">
    <view class="title">是否设为仅校友可见</view>
    <switch name="isWatch"></switch>
  </view>
  <view class="padding flex justify-center">
    <button class="cu-btn round bg-blue  margin-sm" style='width:300rpx' form-type="submit">发布</button>
  </view>
  
</form>